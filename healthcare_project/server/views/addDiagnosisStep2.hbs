<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Add Diagnosis</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/"> &nbsp; Healthcare System</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/DoctorDiagnosissList">Diagnosis</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patientList">Patient</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/doctorPersonalInfo">Personal Information</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">

        <h5>Base Diagnosis Information</h5>
        <div class="card text-white bg-dark">
            <div class="card-header">
                id: {{id}}
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Diagnosis: {{diagnosis_record.diagnosis}}</li>
                <li class="list-group-item">Detail: {{diagnosis_record.detail}}</li>
                <li class="list-group-item">Doctor : {{diagnosis_record.doctor}}</li>
                <li class="list-group-item">Doctor id: {{diagnosis_record.doctor_id}}</li>
                <li class="list-group-item"><p class="card-text"><small class="text-muted">{{diagnosis_record.date}} {{diagnosis_record.time}}</small></p></li>
            </ul>
        </div>


        {{#if diagnosis_record.medications}}
        <h5>Medication</h5>
        <div class="card text-white bg-secondary">
            <ul class="list-group list-group-flush">
                {{#each diagnosis_record.medications}}
                <li class="list-group-item">
                    {{this.medicine}} Dosage: {{this.quantity}} {{this.unit}}
                </li>
                {{/each}}
            </ul>
        </div>
        {{/if}}


        {{#if diagnosis_record.vaccine}}
            <h5>Adverse Reaction</h5>
            {{#each diagnosis_record.vaccine}}
            <div class="card text-white bg-secondary">
                <div class="card-header">
                    {{this.vaccine}}
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Reason: {{this.reason}}</li>
                    <li class="list-group-item">Description: {{this.description}}</li>
                    <li class="list-group-item">State: {{this.state}}</li>
                    <li class="list-group-item"><p class="card-text"><small class="text-muted">{{this.date}} {{this.time}}</small></p></li>
                </ul>
            </div>
            {{/each}}
        {{/if}}


        {{#if diagnosis_record.adverse_reaction}}
            <h5>Adverse Reaction</h5>
            {{#each diagnosis_record.adverse_reaction}}
            <div class="card text-white bg-secondary">
                <div class="card-header">
                    {{this.adverse_reaction}}
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Reason: {{this.reason}}</li>
                    <li class="list-group-item">Description: {{this.description}}</li>
                    <li class="list-group-item">State: {{this.state}}</li>
                    <li class="list-group-item"><p class="card-text"><small class="text-muted">{{this.date}} {{this.time}}</small></p></li>
                </ul>
            </div>
            {{/each}}
        {{/if}}


        {{#if diagnosis_record.allergy_reaction}}
            <h5>Allergy Reaction</h5>
            {{#each diagnosis_record.allergy_reaction}}
            <div class="card text-white bg-secondary">
                <div class="card-header">
                    {{this.allergic_reaction}}
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Reason: {{this.reason}}</li>
                    <li class="list-group-item">Description: {{this.description}}</li>
                    <li class="list-group-item">State: {{this.state}}</li>
                    <li class="list-group-item"><p class="card-text"><small class="text-muted">{{this.date}} {{this.time}}</small></p></li>
                </ul>
            </div>
            {{/each}}
        {{/if}}


        <h5>Function List</h5>
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Steps 2 click below button to add sub record</h5>
            </div>
            <ul class="list-group list-group-flush">
                <a href="/addVaccinePage/{{id}}" class="list-group-item list-group-item-action">
                    Add Vaccine
                </a>
                <a href="/addMedicationsPage/{{id}}" class="list-group-item list-group-item-action">
                    Add Medications
                </a>
                <a href="/addAdversePage/{{id}}" class="list-group-item list-group-item-action">
                    Add Adverse Reaction
                </a>
                <a href="/addAllergyPage/{{id}}" class="list-group-item list-group-item-action">
                    Add Allergy Reaction
                </a>
            </ul>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>