<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Diagnosisss List</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/"> &nbsp; Healthcare System</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/patientDiagnosissList">Diagnosis</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/authorizedHospitalList">Patient</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/personalInfo">Personal Information</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">

        {{#each diagnosisss}}

        <div class="card col">
            <div class="card-body">
                {{#if this.Record.new_version_id}}
                <h4 class="alert alert-danger mt-4">This is delete record. New Version id:
                    {{this.Record.new_version_id}}</h4>
                {{/if}}

                <h6 class="card-subtitle mb-3 text-muted" style="text-align: left;">Diagnosiss id : {{this.Key}}
                </h6>
                <h5 class="card-title">{{this.Record.diagnosis}}</h5>
                <h6 class="card-subtitle mb-1 text-muted">Doctor: {{this.Record.doctor}}</h6>
                <h6 class="card-subtitle mb-1 text-muted">id: {{this.Record.doctor_id}}</h6>
                <h6 class="card-subtitle mb-3 text-muted" style="text-align: right;">{{this.Record.date}} ,
                    {{this.Record.time}}</h6>
            </div>
            <ul class="list-group list-group-flush">

                {{#if this.Record.medications}}
                <div class="card-header">
                    <h4>Medication</h4>
                </div>
                {{/if}}

                {{#each this.Record.medications}}
                <li class="list-group-item">
                    {{this.medicine}} Dosage: {{this.quantity}} {{this.unit}}
                </li>
                {{/each}}


                {{#if this.Record.vaccine}}
                <div class="card-header">
                    <h5>Medication</h5>
                </div>
                {{/if}}

                {{#each this.Record.vaccine}}
                <li class="list-group-item">
                    <h5>{{this.vaccine}}</h5>
                </li>
                <li class="list-group-item">State: {{this.state}}</li>
                <li class="list-group-item">Reason: {{this.reason}}</li>
                <li class="list-group-item">Description: {{this.description}}</li>
                <li class="list-group-item">
                    <p class="card-text"><small class="text-muted">{{this.date}} {{this.time}}</small></p>
                </li>
                {{/each}}


                {{#if this.Record.adverse_reaction}}
                <div class="card-header">
                    <h5>Adverse Reaction</h5>
                </div>
                {{/if}}

                {{#each this.Record.adverse_reaction}}
                <li class="list-group-item">
                    <h5>{{this.adverse_reaction}}</h5>
                </li>
                <li class="list-group-item">State: {{this.state}}</li>
                <li class="list-group-item">Reason: {{this.reason}}</li>
                <li class="list-group-item">Description: {{this.description}}</li>
                <li class="list-group-item">
                    <p class="card-text"><small class="text-muted">{{this.date}} {{this.time}}</small></p>
                </li>
                {{/each}}


                {{#if this.Record.allergy_reaction}}
                <div class="card-header">
                    <h5>Allergy Reaction</h5>
                </div>
                {{/if}}

                {{#each this.Record.allergy_reaction}}
                <li class="list-group-item">
                    <h5>{{this.allergic_reaction}}</h5>
                </li>
                <li class="list-group-item">State: {{this.state}}</li>
                <li class="list-group-item">Reason: {{this.reason}}</li>
                <li class="list-group-item">Description: {{this.description}}</li>
                <li class="list-group-item">
                    <p class="card-text"><small class="text-muted">{{this.date}} {{this.time}}</small></p>
                </li>
                {{/each}}

            </ul>
        </div>

        {{/each}}

    </div>


    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>